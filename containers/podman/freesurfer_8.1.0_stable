FROM rockylinux:9
COPY ~/singularity/build/freesurfer-Rocky8-8.1.0-1.x86_64.rpm /freesurfer-Rocky8-8.1.0-1.x86_64.rpm
COPY ~/singularity/build/license.txt /license
RUN dnf upgrade -y
RUN dnf install -y freesurfer-Rocky8-8.1.0-1.x86_64.rpm
ENV FREESURFER_HOME=/usr/local/freesurfer/8.1.0-1
RUN ${FREESURFER_HOME}/SetUpFreeSurfer.sh